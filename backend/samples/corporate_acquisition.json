  "action_engine": {
    "actions": [
      {
        "action_id": "trigger_acquisition_failure",
        "target_node_type": "Event_Acquisition",
        "display_name": "模拟收购失败事件",
        "direct_effect": {
          "property_to_update": "status",
          "new_value": "FAILED"
        },
        "ripple_rules": [
          {
            "rule_id": "R001",
            "propagation_path": "<-[ACQUIRES]- Company",
            "condition": null,
            "effect_on_target": {
              "action_to_trigger": "recalculate_valuation",
              "parameters": {
                "shock_factor": -0.3
              }
            },
            "insight_template": "收购失败导致 {target[name]} 估值重估，从 {target[valuation]} 调整（冲击因子 -30%）",
            "insight_type": "quantitative_impact",
            "insight_severity": "critical"
          },
          {
            "rule_id": "R002",
            "propagation_path": "<-[TARGET_OF]- Company",
            "condition": null,
            "effect_on_target": {
              "action_to_trigger": "update_risk_status",
              "parameters": {
                "status": "HIGH_RISK"
              }
            },
            "insight_template": "{target[name]} 作为收购标的，因交易失败风险状态升级为 HIGH_RISK",
            "insight_type": "risk_propagation",
            "insight_severity": "warning"
          },
          {
            "rule_id": "R003",
            "propagation_path": "<-[TARGET_OF]- Company",
            "condition": null,
            "effect_on_target": {
              "action_to_trigger": "adjust_numeric",
              "parameters": {
                "property": "valuation",
                "factor": 0.8
              }
            },
            "insight_template": "{target[name]} 估值因收购失败下调 20%，被收购方市场信心受损",
            "insight_type": "quantitative_impact",
            "insight_severity": "warning"
          },
          {
            "rule_id": "R004",
            "propagation_path": "<-[ACQUIRES]- Company",
            "condition": null,
            "effect_on_target": {
              "action_to_trigger": "graph_weighted_exposure",
              "parameters": {
                "direction": "in",
                "edge_type": "SUPPLIES_TO",
                "value_property": "valuation",
                "weight_property": "dependency_weight",
                "aggregation": "sum"
              }
            },
            "insight_template": "网络分析: {target[name]} 的供应链加权敞口为 {target[exposure]}，基于上游供应商估值与依赖权重计算",
            "insight_type": "network_analysis",
            "insight_severity": "critical"
          },
          {
            "rule_id": "R005",
            "propagation_path": "<-[ACQUIRES]- Company",
            "condition": null,
            "effect_on_target": {
              "action_to_trigger": "set_property",
              "parameters": {
                "property": "risk_status",
                "value": "UNDER_REVIEW"
              }
            },
            "insight_template": "建议: {target[name]} 应立即启动风险审查流程，收购失败可能引发连锁反应",
            "insight_type": "recommendation",
            "insight_severity": "info"
          }
        ]
      },
      {
        "action_id": "trigger_acquisition_success",
        "target_node_type": "Event_Acquisition",
        "display_name": "模拟收购成功事件",
        "direct_effect": {
          "property_to_update": "status",
          "new_value": "COMPLETED"
        },
        "ripple_rules": [
          {
            "rule_id": "RS001",
            "propagation_path": "<-[ACQUIRES]- Company",
            "condition": null,
            "effect_on_target": {
              "action_to_trigger": "recalculate_valuation",
              "parameters": {
                "shock_factor": 0.15
              }
            },
            "insight_template": "收购成功提振 {target[name]} 市场信心，估值上调 15%",
            "insight_type": "event_trigger",
            "insight_severity": "info"
          },
          {
            "rule_id": "RS002",
            "propagation_path": "<-[TARGET_OF]- Company",
            "condition": null,
            "effect_on_target": {
              "action_to_trigger": "adjust_numeric",
              "parameters": {
                "property": "valuation",
                "factor": 1.1
              }
            },
            "insight_template": "{target[name]} 作为被收购方，估值因并购溢价上调 10%",
            "insight_type": "quantitative_impact",
            "insight_severity": "info"
          }
        ]
      }
    ]
  }
